<!-- This example requires Tailwind CSS v2.0+ -->
<div class="flow-root">
  <ul role="list" class="-mb-8">
    <% activity_logs.each_with_index do |activity_log, index| %>
      <li>
        <div class="relative pb-8">
          <% if index < activity_logs.size - 1 %>
            <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
          <% end %>
          <div class="relative flex space-x-3" title="<%= activity_log.payload %>">
            <div>
              <% if activity_log.success? %>
                <span class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center ring-8 ring-gray-50">
                  <!-- Heroicon name: solid/check -->
                  <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              <% else %>
                <span class="h-8 w-8 rounded-full bg-red-400 flex items-center justify-center ring-8 ring-gray-50">
                  <!-- Heroicon name: solid/exclamation-circle -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </span>
              <% end %>
              </span>
            </div>
            <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
              <div>
                <p class="text-sm text-gray-500">
                  <% if activity_log.agent_id.present? %>
                    <a href="#" class="font-medium text-gray-900"><%= activity_log.agent.name %></a>
                  <% end %>
                  <%= activity_log.action %> <%= activity_log.activityloggable_type.downcase %>. <%= activity_log.body if activity_log.body.present? %>
                </p>
              </div>
              <div class="text-right text-sm whitespace-nowrap text-gray-500">
                <%= render TimeWithZoneComponent.new(date_time: activity_log.created_at, format: :short, time_zone: @current_agent.time_zone) %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
