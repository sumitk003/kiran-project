<%= form_with model: @current_agent do |form| %>
  <div class="space-y-8 divide-y divide-gray-200 pb-8">
    <div class="space-y-8 divide-y divide-gray-200">
      <div>
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            My information
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            General information which is used across the application.
          </p>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-2">
            <%= render FormLabelComponent.new(form: form, name: :first_name) %>
            <%= render FormTextFieldComponent.new(form: form, name: :first_name, autocomplete: 'first-name') %>
          </div>
          <div class="sm:col-span-2">
            <%= render FormLabelComponent.new(form: form, name: :last_name) %>
            <%= render FormTextFieldComponent.new(form: form, name: :last_name, autocomplete: 'last-name') %>
          </div>
        </div>
        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= render FormLabelComponent.new(form: form, name: :email) %>
            <%= render FormTextFieldComponent.new(form: form, name: :email, autocomplete: 'email') %>
          </div>
        </div>
        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-2">
            <%= render FormLabelComponent.new(form: form, name: :phone) %>
            <%= render FormTextFieldComponent.new(form: form, name: :phone, type: :phone, autocomplete: 'phone') %>
          </div>
          <div class="sm:col-span-2">
            <%= render FormLabelComponent.new(form: form, name: :mobile) %>
            <%= render FormTextFieldComponent.new(form: form, name: :mobile, type: :phone, autocomplete: 'mobile') %>
          </div>
          <div class="sm:col-span-2">
            <%= render FormLabelComponent.new(form: form, name: :fax) %>
            <%= render FormTextFieldComponent.new(form: form, name: :fax, type: :phone, autocomplete: 'fax') %>
          </div>

          <%= form.fields_for :location do |location_form| %>
            <div class="sm:col-span-2">
              <%= location_form.label :time_zone, class: 'block text-sm font-medium leading-6 text-gray-900' %>
              <%= location_form.select :time_zone, ActiveSupport::TimeZone.all.map { |tz| ["(UTC#{tz.formatted_offset}) #{tz.name}", tz.name] }, { required: true }, class: 'mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @account.enable_microsoft_graph_support %>
      <div>
        <div class="pt-8">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Connect to Microsoft Office online
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            Connect to Microsoft Office online so that you can send emails from Reconnector.
          </p>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <div>
              <% if @current_agent.microsoft_graph_token_missing? %>
                <%= link_to 'Click here to sign in', new_agent_microsoft_graph_session_path, class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
              <% else %>
                <p class="py-2 text-sm text-gray-500">Currently connected with <span class="font-bold"><%= @current_agent.connected_to_microsoft_graph_as %></span>.</p>
                <%= link_to 'Click here to refresh your session', new_agent_microsoft_graph_session_path, class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <div class="pt-8">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Real Estate Agent information
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          Your RealEstate.com.au agent information.
        </p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <%= render FormLabelComponent.new(form: form, name: :rea_agent_id) %>
          <%= render FormTextFieldComponent.new(form: form, name: :rea_agent_id, autocomplete: 'rea-agent-id') %>
        </div>
      </div>
    </div>

    <div>
      <div class="pt-8">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Domain.com.au Agent information
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          Your Domain.com.au agent information.
        </p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <%= render FormLabelComponent.new(form: form, name: :domain_com_au_agent_id) %>
          <%= render FormTextFieldComponent.new(form: form, name: :domain_com_au_agent_id, autocomplete: 'domain-com-au-agent-id') %>
        </div>
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end">
        <%= link_to 'Cancel', agent_root_path, class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
        <%= form.submit 'Save', class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>
    </div>
  </div>
<% end %>