<%= render ErrorComponent.new(property_contact.errors) if property_contact.errors.any? %>

<%= form_with(model: property_contact, url: property_property_contacts_path(@property, property_contact)) do |form| %>
  <div class="space-y-8">
    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="col-span-6">
        <%= render FormLabelComponent.new(form: form, name: :contact_id, title: 'Contact') %>
        <div class="mt-2 p-4 grid grid-cols-1 gap-5 sm:grid-cols-4 rounded-lg border border-gray-300 shadow-sm bg-white">

          <% if contacts.try(:any?) %>
            <%= form.collection_radio_buttons(:contact_id, contacts, :id, :name) do |b| %>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= b.radio_button class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded-full' %>
              </div>
              <div class="ml-2 text-sm">
                <%= b.label class: 'font-medium text-gray-700' do %>
                  <%= b.object.name %>
                <% end %>
              </div>
            </div>
            <% end %>
          <% else %>
            <p class="p-4 text-sm text-gray-500">No contacts found.</p>
          <% end %>
        </div>
      </div>
      <div class="sm:col-span-6">
        <p class="block text-sm font-medium text-gray-700">
          Classifications
        </p>
        <div class="mt-2 p-4 grid grid-cols-1 gap-5 sm:grid-cols-4 rounded-lg border border-gray-300 shadow-sm bg-white">
          <%= form.collection_check_boxes(:classifications, @account.classifiers, :name, :name, { include_hidden: false }) do |b| %>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= b.check_box class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
              </div>
              <div class="ml-2 text-sm">
                <%= b.label class: 'font-medium text-gray-700' do %>
                  <%= b.text.humanize %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="w-full flex justify-end">
      <%= link_to 'Cancel', @property, class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      <%= form.submit data: { turbo: false }, class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  </div>
<% end %>
