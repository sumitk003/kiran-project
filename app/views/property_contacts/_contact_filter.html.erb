<div>
  <label for="email" class="block text-sm font-medium text-gray-700">Filter contact list</label>
  <div class="relative mt-1 rounded-md shadow-sm">
    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
      <!-- Heroicon name: mini/magnifying-glass -->
      <svg class="pointer-events-none absolute h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
      </svg>
    </div>
    <%= turbo_frame_tag :property_contact_filter_form do %>
      <%= form_with(url: property_contact_filter_path(@property), data: { controller: 'form-submission' }) do |filter_form| %>
        <%= filter_form.text_field :query, data: { action: "input->form-submission#search" }, placeholder: 'Search', class: 'block w-full rounded-md border-gray-300 pl-10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
      <% end %>
    <% end %>
  </div>
</div>

