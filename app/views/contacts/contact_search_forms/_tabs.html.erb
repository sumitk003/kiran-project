<div class="border-b border-gray-300 flex flex-wrap gap-2 px-2 py-1">
  <% contact_search_form_tabs.each do |tab| %>
    <% active_class = tab.active ? 'bg-indigo-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50' %>
    <%= link_to tab.name,
                tab.url,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium #{active_class} transition-colors duration-150" %>
  <% end %>
</div>
