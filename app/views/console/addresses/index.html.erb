<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Addressable type</th>
      <th>Addressable</th>
      <th>Category</th>
      <th>Line 1</th>
      <th>Line 2</th>
      <th>Line 3</th>
      <th>Suburb</th>
      <th>Postal code</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.addressable_type %></td>
        <td><%= address.addressable_id %></td>
        <td><%= address.category %></td>
        <td><%= address.line_1 %></td>
        <td><%= address.line_2 %></td>
        <td><%= address.line_3 %></td>
        <td><%= address.city %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.state %></td>
        <td><%= address.country_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

