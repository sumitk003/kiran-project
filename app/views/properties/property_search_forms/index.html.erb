<% content_for :page_title do %>Properties | Reconnector.app<% end %>

<%= render Page::HeaderComponent.new('Property search') %>

<div>
  <%= render partial: 'properties/property_search_forms/form', locals: { property_search_form: @property_search_form } %>

  <div class="w-full">
    <% if @properties.empty? %>
      <div class="w-full mx-auto text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No properties found. Try changing your search criteria.</h3>
      </div>
    <% else %>
      <%= render partial: 'properties/table', locals: { properties: @properties, sortable: false } %>
    <% end %>

  </div>
</div>