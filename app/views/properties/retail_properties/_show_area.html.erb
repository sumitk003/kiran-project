<% property.building_area_attributes.each do |area_field| %>
  <div class="<%= cycle('bg-white', 'bg-gray-50') %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
    <dt class="text-sm font-medium text-gray-500">
      <%= area_field.to_s.humanize %>
    </dt>
    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
      <%= property_area_label(property[area_field]) %>
    </dd>
  </div>
<% end %>
