<%= form_with model: property do |form| %>
  <div class="space-y-6">
    <%= render 'general_information', form: form %>
    <%= render 'area', form: form %>
    <%= render 'details', form: form %>
    <%= render 'images', form: form %>
    <%= render 'files', form: form %>

    <div class="flex justify-end space-x-4">
      <%= link_to 'Cancel', [property], class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      <%= form.submit t('.save'), class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  </div>
<% end %>
