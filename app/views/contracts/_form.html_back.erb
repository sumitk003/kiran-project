<%= form_with(model: contract, url: property_contract_path(@property), data: {controller: "contracts"}) do |form| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <% if contract.errors.any? %>
        <div class="sm:col-span-2">
          <div id="error_explanation">
            <h2><%= pluralize(contract.errors.count, "error") %> prohibited this contract from being saved:</h2>
            <ul>
              <% contract.errors.each do |error| %>
                <li class="text-red-500"><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="sm:col-span-6 flex justify-start space-x-6">
        <div>
          <%= form.check_box :for_sale, data: { action: "change->contracts#setImportantFields" }, class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
          <%= form.label :for_sale, class: 'font-medium text-gray-700' %>
        </div>

        <div>
          <%= form.check_box :for_lease, class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
          <%= form.label :for_lease, class: 'font-medium text-gray-700' %>
        </div>
      </div>

      <div data-contracts-target="saleFields" class="sm:col-span-2">
        <%= render FormLabelComponent.new(form: form, name: :sale_price, data: { contracts_target: "salePriceLabel" }) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :sale_price) %>
      </div>

      <div class="sm:col-span-2">
        <%= render FormLabelComponent.new(form: form, name: :sale_price_from) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :sale_price_from) %>
      </div>

      <div class="sm:col-span-2">
        <%= render FormLabelComponent.new(form: form, name: :sale_price_to) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :sale_price_to) %>
      </div>

      <div class="sm:col-span-4">
        <%= render FormLabelComponent.new(form: form, name: :sale_auction_venue) %>
        <%= render FormTextFieldComponent.new(form: form, name: :sale_auction_venue) %>
      </div>

      <div class="sm:col-span-4">
        <%= render FormLabelComponent.new(form: form, name: :sale_inspection_on) %>
        <%= form.date_select :sale_inspection_on, include_blank: true %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :sale_reserve_price) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :sale_reserve_price) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :sale_actual_sale_price) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :sale_actual_sale_price) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :private_treaty_minimum_price) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :private_treaty_minimum_price) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :private_treaty_target_price) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :private_treaty_target_price) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :eoi_close_on) %>
        <%= form.date_select :eoi_close_on, include_blank: true %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :eoi_inspection_on) %>
        <%= form.date_select :eoi_inspection_on, include_blank: true %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :eoi_minimum_price) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :eoi_minimum_price) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :eoi_target_price) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :eoi_target_price) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_net_rent) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_net_rent) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_outgoings) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_outgoings) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_gross_rent) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_gross_rent) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_cleaning) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_cleaning) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_covered_parking_space) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_covered_parking_space) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_on_grade_parking_space) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_on_grade_parking_space) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_other_rental_costs) %>
        <%= render FormPriceFieldComponent.new(form: form, name: :lease_other_rental_costs) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_commencement_on) %>
        <%= form.date_select :lease_commencement_on, include_blank: true %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_expires_on) %>
        <%= form.date_select :lease_expires_on, include_blank: true %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_term) %>
        <%= render FormTextFieldComponent.new(form: form, name: :lease_term) %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_rent_review_on) %>
        <%= form.date_select :lease_rent_review_on, include_blank: true %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_escalation_rate) %>
        <%= form.text_area :lease_escalation_rate %>
      </div>

      <div class="sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :lease_escalation_formulae) %>
        <%= render FormTextFieldComponent.new(form: form, name: :lease_escalation_formulae) %>
      </div>

      <div class="sm:col-span-6 flex justify-end">
        <%= link_to 'Cancel', @property, class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
        <%= form.submit class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>

    </div>
  </div>
<% end %>
