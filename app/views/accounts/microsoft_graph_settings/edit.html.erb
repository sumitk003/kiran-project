<%= render Page::HeaderComponent.new('Microsoft Graph settings') %>

<div class="w-full">
  <%= render 'accounts/account_menu_options' %>
  <div>
    <%= form_with model: @account do |form| %>
      <div class="space-y-8 divide-y divide-gray-200">
        <div class="space-y-8 divide-y divide-gray-200">
          <div class="pt-8">
            <div>
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                Microsoft Graph settings
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                Configure your Microsoft Graph settings here.
              </p>
            </div>
            <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-6 flex justify-start space-x-2">
                <%= form.check_box :enable_microsoft_graph_support, class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
                <%= render FormLabelComponent.new(form: form, name: :enable_microsoft_graph_support) %>
              </div>
            </div>
          </div>
          <div class="pt-8">
            <div>
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                Azure settings
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                Configure your Azure settings here.
              </p>
            </div>
            <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-6">
                <%= render FormLabelComponent.new(form: form, name: :azure_application_id) %>
                <%= render FormTextFieldComponent.new(form: form, name: :azure_application_id, type: :text, autocomplete: 'azure-application-id', placeholder: 'Logon to Azure > App registrations') %>
              </div>
              <div class="sm:col-span-6">
                <%= render FormLabelComponent.new(form: form, name: :azure_tenant_id) %>
                <%= render FormTextFieldComponent.new(form: form, name: :azure_tenant_id, type: :text, autocomplete: 'azure-tenant-id', placeholder: 'Logon to Azure > App registrations') %>
              </div>
              <div class="sm:col-span-6">
                <%= render FormLabelComponent.new(form: form, name: :azure_client_secret) %>
                <%= render FormTextFieldComponent.new(form: form, name: :azure_client_secret, type: :text, placeholder: 'Logon to Azure > App registrations') %>
              </div>
            </div>
          </div>
        </div>

        <div class="pt-5">
          <div class="flex justify-end">
            <%= link_to 'Cancel', agent_root_path, class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
            <%= form.submit 'Save', class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
