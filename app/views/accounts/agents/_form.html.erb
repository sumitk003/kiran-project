<%= form_with(model: [account, agent], url: url) do |form| %>
  <div class="mt-6 space-y-6">
    <%= render Console::FormSectionComponent.new(header: 'Agent information', description: 'Specific information about the agent.') do %>

      <div class="col-span-6 sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :first_name) %>
        <%= render FormTextFieldComponent.new(form: form, name: :first_name) %>
      </div>
      <div class="col-span-6 sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :last_name) %>
        <%= render FormTextFieldComponent.new(form: form, name: :last_name) %>
      </div>
      <div class="col-span-6">
        <%= render FormLabelComponent.new(form: form, name: :email) %>
        <%= render FormTextFieldComponent.new(form: form, name: :email) %>
      </div>
      <div class="col-span-6 sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :phone) %>
        <%= render FormTextFieldComponent.new(form: form, name: :phone) %>
      </div>
      <div class="col-span-6 sm:col-span-3">
        <%= render FormLabelComponent.new(form: form, name: :role) %>
        <%= form.select :role, agent_role_options, { required: true }, class: 'mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
      </div>
      <div class="col-span-6 sm:col-span-3">
        <%= form.fields_for :location do |location_form| %>
          <div class="sm:col-span-2">
            <%= location_form.label :time_zone, class: 'block text-sm font-medium leading-6 text-gray-900' %>
            <%= location_form.select :time_zone, ActiveSupport::TimeZone.all.map { |tz| ["(UTC#{tz.formatted_offset}) #{tz.name}", tz.name] }, { required: true }, class: 'mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="flex justify-end">
      <%= link_to 'Cancel', [Current.account, :agents], class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      <%= form.submit class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  </div>
<% end %>
