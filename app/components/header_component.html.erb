<% if @style == :h1 %>
  <%= content_tag(@tag, class: 'text-2xl font-bold tracking-tight text-slate-900 sm:text-3xl sm:truncate') do %><%= @text %><% end %>
<% elsif @style == :h2 %>
  <%= content_tag(@tag, class: 'mt-1 text-base font-semibold leading-7 text-slate-900') do %><%= @text %><% end %>
<% elsif @style == :h3 %>
  <%= content_tag(@tag, class: 'text-lg font-semibold leading-6leading-relaxed text-slate-900') do %><%= @text %><% end %>
<% else %>
  <%= content_tag(@tag) do %><%= @text %><% end %>
<% end %>